{
    "name": "Python Dev Container",
    "image": "python:3.13-slim",
    "customizations": {
      "vscode": {
        "extensions": [
          "ms-python.python",
          "ms-python.vscode-pylance",
          "eamodio.gitlens"
        ]
      }
    },
    "postCreateCommand": "apt-get update && apt-get install -y git locales-all && pip install poetry && poetry install --no-root", // Установка Poetry и зависимостей
    "postStartCommand": "export PYTHONPATH=. && poetry shell",

    "workspaceFolder": "/workspace",
    "workspaceMount":  "source=${localWorkspaceFolder},target=/workspace,type=bind",
    "mounts": [
      //"source=${env:HOME}/.ssh,target=/root/.ssh,type=bind"
    ]
  }
